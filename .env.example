# ERP/MES Simulator Environment Variables
# AWS 배포 시 이 값들을 환경에 맞게 설정

# ===========================================
# Application
# ===========================================
MES_APP_NAME=GreenBoard MES API
MES_APP_VERSION=1.0.0
MES_DEBUG=false

# ===========================================
# Database (AWS RDS)
# ===========================================
# 형식: postgresql+asyncpg://USER:PASSWORD@HOST:PORT/DATABASE
MES_DATABASE_URL=postgresql+asyncpg://postgres:YOUR_PASSWORD@YOUR_RDS_ENDPOINT:5432/erp_mes_db
MES_DATABASE_ECHO=false
MES_DATABASE_POOL_SIZE=5
MES_DATABASE_MAX_OVERFLOW=10

# ===========================================
# CORS (쉼표로 구분된 origin 목록)
# ===========================================
# 로컬 개발: http://localhost:3000,http://localhost:5173
# AWS 배포: https://your-domain.com,https://api.your-domain.com
MES_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# ===========================================
# Simulation 설정
# ===========================================
MES_DEFAULT_TENANT_ID=a0eebc99-9c0b-4ef8-bb6d-6bb9bd380a11

# ===========================================
# WebSocket
# ===========================================
MES_WS_HEARTBEAT_INTERVAL=30

